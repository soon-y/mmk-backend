generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id          Int      @id @default(autoincrement())
  name        String
  category    String
  description String
  price       Int
  stock       Int
  createdAt   DateTime @default(now())
}
